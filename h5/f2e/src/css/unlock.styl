@import "./define"

.lockcontain
  width: 100%
  height: 100%
  background-color $color-primary
  overflow: hidden

.lockmask
  position fixed
  z-index 1000
  top 0
  right 0
  left 0
  bottom 0
  display flex
  background rgba(0, 0, 0, 0.8)

.content
  display flex
  width 100%
  height 100%
  position fixed
  z-index 1001
  top 0
  left 0
  display flex
  justify-content center
  .circle-block
    margin-top 25%
    position relative
    display flex
    //justify-content center
    flex-direction column
    align-items center
    width 100%
    .circle
      border 15px solid #00e587
      border-radius 50%
      width 140px
      height 140px
      text-align center
      display flex
      justify-content center
      align-items center
    .rotating
      background url('../img/circle-rotate.png') no-repeat
      background-size 140px 140px
      border 0
      animation rotate 0.5s infinite linear
      position relative
    .fail
       border-color #fe3824
  .img-logo__block
    top 50px
    width 100%
    position absolute
    display flex
    justify-content center
    align-items center
    .img-logo
      width 70px
  .breath
    animation breath 2s infinite ease-in-out
  .text
    margin-top 20px
    text-align center
    color #fff
    font-size 16px

@keyframes rotate
  to
    transform: rotate(360deg) translate(0, 0)

@keyframes breath
  from
    opacity: 0.1                        /* 动画开始时的不透明度 */
  50%
    opacity: 1                          /* 动画50% 时的不透明度 */
  to
    opacity: 0.1                        /* 动画结束时的不透明度 */