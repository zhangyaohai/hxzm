@import "./define"

.header
  background-color: #eee
  position: absolute;
  width: 100%;
  height:  50%
  display: flex
  .bg
    display: block
    width: 100%
    height: 100%
    background-color: rgb(255,243,236,0)
  .overlay
    position: absolute
    width: 100%
    height: 100%
    left: 0px
    top: 0px
    img.avatar
      width: 114px
      height: 105px
      border: 0px
      margin: -10% auto 10px auto
    .name
      padding-top: 5px
      font-size: 16px
      text-align: center
    .fee
      padding-top: 20px
      font-size: 40px
      text-align: center
.nex
  position: absolute
  width: 100%;
  height:  50%
  top: 50%

.content
  position: absolute;
  right: 20px;

.mask-input
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  
.mask-input-dialog
  position: fixed;
  z-index: 10;
  width: 100%;
  top: 0px;
  background-color: transparent;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;

.show-dialog
  width: 100%
  background-color: transparent

.dismiss
  width: 30%
  margin: 50px 0px
  height: 30px
  background-color: #00e587;
  color: #fff
  font-size: 15px

.buttonline
 text-align: center
 margin-top: 10px

.shareicon
  width: 30px
  height: 30px

.solid
  height: 50px
  padding: 10px 50px;
  border-radius: 6px
  font-size: 18px
  color: #fff
  display: flex
  justify-content: center;
  background-color: $color-primary
  &:disabled
    background-color: $color-grey
  .mycontent
    line-height: 30px
    padding: 0px 10px
