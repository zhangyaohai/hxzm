@import "./define"

.report
  width: 100%
  text-align: center
  padding: 20px 20px
  background-color: #fff
  .title
    text-align: left
    font-weight: 600
  .select_group
    background-color: transparent
    text-align: left
  .scanline
    background-color: #f0f0f0
    margin: 10px 0px
    padding: 14px 10px
    width: 100%
    display: flex
    height: 66px
    .scani
      width: 38px
      height: 38px
      padding: 6px
      border-radius: 19px
      background-color: #212121
      .scanicon
        width: 26px
        height: 26px
    .myc
      display: flex
      flex-direction: column;
      height: 66px
      margin: -10px 0px -16px 0px
      .input-content
        color: #212121
        line-height: 38px
        .cc
          padding: 0px 10px
      .input-re
        .ccc
          height: 22px
          color: #FF9B00
          line-height: 22px
          font-size: 13px
          text-align: left
          padding: 0px 10px
      .input-content-input
        min-width: 180px
        line-height: 38px
        margin: 0px 10px

.muy
  float: left;
  position: relative;
  margin-right: 9px;
  margin-bottom: 9px;
  width: 77px;
  height: 77px;
  border: 1px solid #D9D9D9;

.rule
  font-size: 15px

.note
  width: 100%
  background-color: #fff
  padding: 2px 20px 0px 20px

.txt
  background-color: #f0f0f0

.postreport
  width: 100%
  text-align: center
  padding: 10px 20px
  background-color: #fff