@import "./define"

body
  background-color: #fff

.header
  position: fixed
  font-size: 16px
  border-bottom: 1px solid #f1f1f1

.container
  padding-top: 50px
  font-size: 13px
  
.row
  background-color: #fff
  width: 100% 
  height: 50px
  .col
    width: 25%
  &:last-child
    .line-bottom
      visibility: hidden
  &:first-child
    .line-top
      visibility: hidden
      

.stream
  .line 
    margin-right: 5px
    .dot
      width: 12px
      height: 12px
      border: 2px solid $color-primary
      border-radius: 6px
    .line-top
      width: 2px
      height: 19px
      background-color: #eeeeee
    .line-bottom
      width: 2px
      height: 19px
      background-color: #eeeeee
  
.nocharge
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  justify-content: center

.nochargecontent
  width: 90%
  margin-top: 50%;
  height: 50px;
  display: flex;
  justify-content: center
  line-height: 50px
  font-weight: 400
  