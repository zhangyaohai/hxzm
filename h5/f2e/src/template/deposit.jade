extends layout/default.jade
include component/loading.jade

block head  
  title 缴纳押金
  +css("/css/deposit.css")
  +css("/css/loading.css")

block body
  #app(v-cloak)
    .loading(:class="{'hidden':payloaded}")
      +myLoading()

    div.title1
    .user-steps
      .steps
        .steplines
          .stepline(:style="{'background-color': step1line}")
          .stepline
          .stepline(style='background-color: #a9a9a9')
        .stepdots
          .stepbox
            .stepdot
          .stepbox
            .stepdot
          .stepbox
            .stepdot
            .stepdotend(style='background-color: #a9a9a9; border: 1px solid #a9a9a9')
      .steps-button
        button.rowbutton(:disabled='true') 手机绑定
        button.rowbutton(:disabled='true') 实名认证
        button.rowbutton(:disabled='true') 缴纳押金
        button.rowbutton(:disabled='true')  开始用车
    .info-panel.flex-col-center
      a.rightmask(href="./home.html")
        img.right(src="/img/home-hl.png")
      div 缴纳押金
      div 298.00
      div 押金随时可退，无需提前预约
    .payment-panel.table
      .row
        img.icon(src="/img/icon-wechat-pay.png")
        .title 微信支付
        input.pull-right(type="radio" name="type" checked) 
      //- .row
      //-   img.icon(src="/img/icon-alipay.png")
      //-   .title 支付宝支付
      //-   input.pull-right(type="radio" name="type")
    .padding-container
      button.solid.full-width(@click='payDeposit()') 确定
    

block js
  +js("/js/jweixin-1.0.0.js")
  +js("/js/deposit.js")



  
 